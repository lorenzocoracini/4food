{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["build/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "(.*)",
      "dest": "src/index.ts"
    }
  ],
  "hooks": {
    "postbuild": "npm run migration:run"
  }
}
